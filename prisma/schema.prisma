generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  slackId  String  @id
  airtableRecId String @unique

  inHuddle Boolean @default(false)

  calls    Call[]
  sessions Session[]
}

model Call {
  id        Int      @id @default(autoincrement())
  callId    String

  timeMs    Int @default(0)

  inCall    Boolean 
  joinedAt  DateTime
  leftAt    DateTime? 

  slackId   String
  user      User     @relation(fields: [slackId], references: [slackId])
}

model Session {
  id        String      @id @default(uuid())
  callId    String

  slackId   String
  user      User     @relation(fields: [slackId], references: [slackId])

  joinedAt  DateTime
  leftAt    DateTime? 

  initalScrap    String?
  finalScrap     String?
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  slackId  String  @id

  calls    Call[]
}

model Call {
  id        Int      @id @default(autoincrement())
  callId    String

  timeMs    Int @default(0)

  inCall    Boolean 
  joinedAt  DateTime
  leftAt    DateTime? 

  slackId   String
  user      User     @relation(fields: [slackId], references: [slackId])
}

